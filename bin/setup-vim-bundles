#!/usr/bin/env python

import os
import subprocess
import shutil
import sys

VIM_BUNDLE_DIR = os.getenv('HOME') + '/.vim/bundle'

VIM_BUNDLE_REPOS = [
  'https://github.com/vim-scripts/jade.vim.git',
  'https://github.com/pbrisbin/html-template-syntax.git',
  'https://github.com/davidzchen/Syntax-for-Fasta.git',
