  # Commenting out syntastic until I figure out how to make Java work.
  'https://github.com/scrooloose/syntastic.git',

  # On OS X, Exuberant CTags must be installed:
  # brew install ctags-exuberant
  'https://github.com/majutsushi/tagbar.git',
  'https://github.com/airblade/vim-gitgutter.git'
]

def get_bundle_name(url):
  parts = url.split('/')
  bundle = parts[-1]
  if bundle.endswith('.git'):
    bundle = bundle[:-4]
  return bundle

def create_bundle_repo_map(repos):
  bundle_repo_map = {}
  for repo in repos:
    bundle_repo_map[get_bundle_name(repo)] = repo
  return bundle_repo_map

def install_bundles(bundle_dir, bundles, bundle_repo_map):
  for bundle in bundles:
    print "Installing bundle: %s" % bundle_repo_map[bundle]
    repo = bundle_repo_map[bundle]
    proc = subprocess.Popen(['git', 'clone', repo], cwd = bundle_dir)
    proc.wait()

def remove_bundles(bundle_dir, bundles):
  for bundle in bundles:
    print "Removing bundle: %s" % bundle
    shutil.rmtree(os.path.join(bundle_dir, bundle))

def setup_vim_bundles(bundle_dir, repos):
  bundle_repo_map = create_bundle_repo_map(repos)

  new_bundles = set(bundle_repo_map.keys())
  installed_bundles = set([ f for f
    in os.listdir(bundle_dir)
    if os.path.isdir(os.path.join(bundle_dir, f))
  ])

  common_bundles = new_bundles & installed_bundles
  bundles_to_install = new_bundles - common_bundles
  bundles_to_remove = installed_bundles - common_bundles

  install_bundles(bundle_dir, bundles_to_install, bundle_repo_map)
  remove_bundles(bundle_dir, bundles_to_remove)

def main():
  if not os.path.isdir(VIM_BUNDLE_DIR):
    print "%s is not a directory." % VIM_BUNDLE_DIR
    sys.exit(os.EX_DATAERR)

  if not os.path.exists(VIM_BUNDLE_DIR):
    try:
      os.makedirs(VIM_BUNDLE_DIR)
    except IOError as err:
      print "Error creating bundle directory %s: %s" % (VIM_BUNDLE_DIR, str(err))
      sys.exit(os.EX_IOERR)

  try:
    setup_vim_bundles(VIM_BUNDLE_DIR, VIM_BUNDLE_REPOS)
  except IOError as err:
    print "Error setting up bundles: %s" % str(err)
    sys.exit(os.EX_IOERR)

if __name__ == '__main__':
  main()
